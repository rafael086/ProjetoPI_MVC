
@{
    ViewBag.Title = "Cadastro";
}
<div class="container-fluid">
    <h2>Cadastro</h2>
    <div class="row col-md-4 col-md-offset-4">
        <span class="pull-left">Você é</span>
        <div class="btn-group pull-right" data-toggle="buttons">
            <label for="ong" class="btn btn-default active">
                <input type="radio" name="tipo" id="ong" value="formOngs" checked>Ong
            </label>
            <label for="doador" class="btn btn-default">
                <input type="radio" name="tipo" id="doador" value="formDoadores">Doador
            </label>
        </div>
    </div>
    @{ Html.RenderPartial("_CadastroOng");}
    @{ Html.RenderPartial("_CadastroDoador");}
</div>
@section scripts{
    @Scripts.Render("~/bundles/jqueryval");
    <script>
        $(function () {
            $("#formDoadores").hide();
            $("input[name='tipo']").on("change", function () {
                if ($("input:checked").val() == "formOngs") {
                    $("#formDoadores").hide();
                    $("#formOngs").show();
                }
                else if ($("input:checked").val() == "formDoadores") {
                    $("#formOngs").hide();
                    $("#formDoadores").show();
                }
            });
        })
    </script>
}
