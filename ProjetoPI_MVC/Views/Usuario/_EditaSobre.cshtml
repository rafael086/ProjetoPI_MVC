@model ProjetoPI_MVC.Models.Sobre
<form method="post" class="form-horizontal formEditaSobre" data-s>
    <input type="hidden" name="sobreID" value="@Model.Id" />
    <div class="form-group">
        <label for="titulo" class="control-label col-md-2">Titulo</label>
        <div class="col-md-10">
            <input type="text" name="titulo" value="@Model.Titulo" class="form-control" placeholder="Titulo" />
        </div>
    </div>
    <div class="form-group">
        <label for="texto" class="control-label col-md-2">Texto</label>
        <div class="col-md-10">
            <textarea name="texto" class="form-control">@Model.Texto</textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-6">
            <button type="button" class="btn btn-block btnFechar">Fechar</button>
        </div>
        <div class="col-md-6">
            <button type="submit" class="btn btn-block btn-success btnSalvar">Salvar</button>
        </div>
    </div>
</form>