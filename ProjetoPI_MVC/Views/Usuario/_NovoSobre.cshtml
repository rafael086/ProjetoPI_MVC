<div class="row" id="novoSobre">
    <form method="post" class="form-horizontal" id="formNovoSobre">
        <div class="form-group">
            <label for="titulo" class="control-label col-md-2">Titulo</label>
            <div class="col-md-10">
                <input type="text" name="titulo" id="titulo" class="form-control" placeholder="Titulo" />
            </div>
        </div>
        <div class="form-group">
            <label for="texto" class="control-label col-md-2">Texto</label>
            <div class="col-md-10">
                <textarea name="texto" id="texto" class="form-control"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6">
                <button type="button" id="btnCancelarAddSobre" class="btn btn-block btn-danger">Cancelar</button>
            </div>
            <div class="col-md-6">
                <button type="submit" id="btnSalvarSobre" class="btn btn-block btn-success">Salvar</button>
            </div>
        </div>
    </form>
</div>

