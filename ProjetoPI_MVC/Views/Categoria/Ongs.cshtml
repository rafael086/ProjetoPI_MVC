@{
    @model List<ProjetoPI_MVC.Models.Ongs>
    ViewBag.Title = "Ongs";
    @section estilo{
        <link href="@Url.Content("~/Content/Categoria.css")" rel="stylesheet" />
    }
}
<h2 class="page-header text-center">Ongs</h2>
<div id="destaque" class="row">
    <div class="col-md-6">
        <img src="~/Imagens/@Model.First().Imagens.Nome" class="img-rounded"/>
    </div>
    <div class="col-md-6 panel panel-default">
        <div class="panel-heading">
            <h3>@Model.First().Nome</h3>
        </div>
        <div class="panel-body">
            <p>@Model.First().Frase</p>
        </div>
        <div class="panel-footer">
            <span class="col-md-12">Projetos Criados: @Model.First().Projetos.Count</span>
            @{ Model.RemoveAt(0);}
        </div>
    </div>
</div>
<div id="grupo" class="row">
    @foreach (var ong in Model)
    {
        <div class="col-md-6">
            <div class="col-md-4">
                <img src="~/Imagens/@ong.Imagens.Nome" alt="Alternate Text" class="img-rounded" />
            </div>
            <div class="col-md-8 panel panel-default">
                <div class="panel-heading">
                    <h3>@ong.Nome</h3>
                </div>
                <div class="panel-body"><p>@ong.Frase</p></div>
                <div class="panel-footer"><span class="col-md-12">Projetos Criados: @ong.Projetos.Count</span></div>
            </div>
        </div>
    }
</div>

