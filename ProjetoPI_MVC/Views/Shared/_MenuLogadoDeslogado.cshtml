@if (!User.Identity.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li><a href="#" data-toggle="modal" data-target="#modalLogin">Entrar</a></li>
        <li>@Html.ActionLink("Cadastrar","Cadastro","Formulario")</li>
    </ul>
    <div id="modalLogin" class="modal fade" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title text-center">Login</h4>
                </div>
                <div class="modal-body">
                    @{Html.RenderAction("Login","Usuario");}
                </div>
            </div>
        </div>    
    </div>
}
else {
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Meu perfil","Index","Usuario")</li>
        <li>@Html.ActionLink("Editar Cadastro","EditarCadastro","Usuario")</li>
        <li>@Html.ActionLink("Sair","Sair","Usuario")</li>
    </ul>
}
